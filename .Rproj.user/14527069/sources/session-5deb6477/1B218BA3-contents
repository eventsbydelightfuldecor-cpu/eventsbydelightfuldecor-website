    <!-- Load jQuery first -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js'></script>

    <!-- Load Turn.js library (without auto-init) -->
    <script src="../js/turn-lib.js"></script>

    <!-- Then load page-specific scripts -->
    <script src="../js/components.js?v=2.0"></script>
    <script src="../js/scripts.js?v=2.0"></script>

    <script>
        // Gallery filtering functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterBtns = document.querySelectorAll('.filter-btn');
            const galleryItems = document.querySelectorAll('.gallery-item');

            filterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterBtns.forEach(b => b.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');

                    const category = this.getAttribute('data-category');

                    galleryItems.forEach(item => {
                        if (category === 'all' || item.getAttribute('data-category') === category) {
                            item.style.display = 'block';
                            item.classList.add('fade-in');
                        } else {
                            item.style.display = 'none';
                            item.classList.remove('fade-in');
                        }
                    });
                });
            });

            // Modal lightbox functionality
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            const modalCaption = document.querySelector('.modal-caption');
            const closeBtn = document.querySelector('.close');

            // Add click event to all gallery images
            galleryItems.forEach(item => {
                const img = item.querySelector('img');
                if (img) {
                    img.addEventListener('click', function() {
                        modal.style.display = 'block';
                        modalImg.src = this.src;
                        modalCaption.textContent = this.alt;
                        document.body.style.overflow = 'hidden'; // Prevent background scrolling
                    });
                }
            });

            // Close modal functionality
            closeBtn.addEventListener('click', function() {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto'; // Restore scrolling
            });

            // Close modal when clicking outside the image
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    modal.style.display = 'none';
                    document.body.style.overflow = 'auto'; // Restore scrolling
                }
            });

            // Close modal with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && modal.style.display === 'block') {
                    modal.style.display = 'none';
                    document.body.style.overflow = 'auto'; // Restore scrolling
                }
            });

        });

        // ===== ENHANCED WEDDING MAGAZINE FLIPBOOK FUNCTIONALITY =====
        var flipbookInitialized = false;
        var $bookEl = null;
        var totalPages = 7;

        var FlipbookManager = {
            ratio: 1.38,
            el: null,
            isInitialized: false,

            init: function(id) {
                var me = this;
                this.el = document.getElementById(id);

                if (!this.el) {
                    console.error('Book element not found!');
                    return false;
                }

                console.log('Initializing flipbook...');
                this.resize();
                this.initializeTurnJS();

                // Handle window resize with debounce
                let resizeTimeout;
                window.addEventListener('resize', function() {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(function() {
                        if (me.el && $bookEl && $bookEl.turn) {
                            var size = me.resize();
                            $bookEl.turn('size', size.width, size.height);
                        }
                    }, 250);
                });

                return true;
            },

            resize: function() {
                if (!this.el) return { width: 0, height: 0 };

                this.el.style.width = '';
                this.el.style.height = '';

                var containerWidth = this.el.parentElement.clientWidth * 0.9;
                var containerHeight = this.el.parentElement.clientHeight * 0.85;

                var width = containerWidth;
                var height = Math.round(width / this.ratio);

                if (height > containerHeight) {
                    height = containerHeight;
                    width = Math.round(height * this.ratio);
                }

                this.el.style.width = width + 'px';
                this.el.style.height = height + 'px';

                return { width: width, height: height };
            },

            initializeTurnJS: function() {
                if (!this.el || typeof $ === 'undefined' || typeof $.fn.turn === 'undefined') {
                    console.error('Dependencies not loaded');
                    return false;
                }

                $bookEl = $(this.el);

                // Initialize Turn.js with enhanced options
                $bookEl.turn({
                    gradients: true,
                    acceleration: true,
                    display: 'double',
                    duration: 800,
                    elevation: 50,
                    when: {
                        turning: function(event, page, view) {
                            FlipbookManager.updatePageIndicator(page);
                        },
                        turned: function(event, page, view) {
                            FlipbookManager.updatePageIndicator(page);
                            FlipbookManager.updateNavigationButtons(page);
                        }
                    }
                });

                this.isInitialized = true;
                flipbookInitialized = true;
                console.log('Turn.js initialized successfully');

                // Initial page indicator update
                this.updatePageIndicator(1);
                this.updateNavigationButtons(1);

                return true;
            },

            updatePageIndicator: function(page) {
                const currentPageEl = document.getElementById('currentPage');
                if (currentPageEl) {
                    currentPageEl.textContent = page || 1;
                }
            },

            updateNavigationButtons: function(page) {
                const prevBtn = document.getElementById('prevPage');
                const nextBtn = document.getElementById('nextPage');

                if (prevBtn) {
                    prevBtn.disabled = page <= 1;
                    prevBtn.style.opacity = page <= 1 ? '0.3' : '1';
                    prevBtn.style.cursor = page <= 1 ? 'not-allowed' : 'pointer';
                }

                if (nextBtn) {
                    nextBtn.disabled = page >= totalPages;
                    nextBtn.style.opacity = page >= totalPages ? '0.3' : '1';
                    nextBtn.style.cursor = page >= totalPages ? 'not-allowed' : 'pointer';
                }
            },

            nextPage: function() {
                if ($bookEl && $bookEl.turn) {
                    $bookEl.turn('next');
                }
            },

            previousPage: function() {
                if ($bookEl && $bookEl.turn) {
                    $bookEl.turn('previous');
                }
            },

            goToPage: function(pageNum) {
                if ($bookEl && $bookEl.turn) {
                    $bookEl.turn('page', pageNum);
                }
            }
        };

        // Preload images function
        function preloadFlipbookImages(callback) {
            const images = document.querySelectorAll('#book .page img');
            let loadedCount = 0;
            const totalImages = images.length;

            if (totalImages === 0) {
                callback();
                return;
            }

            images.forEach(function(img) {
                if (img.complete) {
                    loadedCount++;
                    if (loadedCount === totalImages) callback();
                } else {
                    img.addEventListener('load', function() {
                        loadedCount++;
                        if (loadedCount === totalImages) callback();
                    });
                    img.addEventListener('error', function() {
                        loadedCount++;
                        if (loadedCount === totalImages) callback();
                    });
                }
            });
        }

        // DOM Ready
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, setting up magazine flipbook...');

            const magazineBtn = document.getElementById('magazineBtn');
            const magazineModal = document.getElementById('magazineModal');
            const magazineClose = document.querySelector('.magazine-close');
            const loadingIndicator = document.getElementById('flipbookLoading');
            const prevPageBtn = document.getElementById('prevPage');
            const nextPageBtn = document.getElementById('nextPage');

            // Set total pages
            document.getElementById('totalPages').textContent = totalPages;

            // Open magazine modal
            if (magazineBtn) {
                magazineBtn.addEventListener('click', function() {
                    console.log('Opening magazine...');
                    magazineModal.style.display = 'flex';
                    document.body.classList.add('hide-overflow');

                    // Show loading indicator
                    if (loadingIndicator) {
                        loadingIndicator.style.display = 'flex';
                    }

                    setTimeout(function() {
                        if (typeof $ === 'undefined' || typeof $.fn.turn === 'undefined') {
                            alert('Error: Required libraries not loaded. Please refresh the page.');
                            return;
                        }

                        // Preload images then initialize
                        preloadFlipbookImages(function() {
                            console.log('All images loaded');

                            if (!flipbookInitialized) {
                                FlipbookManager.init('book');
                            } else if ($bookEl && $bookEl.turn) {
                                var size = FlipbookManager.resize();
                                $bookEl.turn('size', size.width, size.height);
                                $bookEl.turn('page', 1);
                                FlipbookManager.updatePageIndicator(1);
                                FlipbookManager.updateNavigationButtons(1);
                            }

                            // Hide loading indicator
                            if (loadingIndicator) {
                                loadingIndicator.style.display = 'none';
                            }
                        });
                    }, 300);
                });
            }

            // Navigation buttons
            if (prevPageBtn) {
                prevPageBtn.addEventListener('click', function() {
                    FlipbookManager.previousPage();
                });
            }

            if (nextPageBtn) {
                nextPageBtn.addEventListener('click', function() {
                    FlipbookManager.nextPage();
                });
            }

            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (magazineModal.style.display === 'flex' || magazineModal.style.display === 'block') {
                    if (e.key === 'ArrowLeft') {
                        e.preventDefault();
                        FlipbookManager.previousPage();
                    } else if (e.key === 'ArrowRight') {
                        e.preventDefault();
                        FlipbookManager.nextPage();
                    } else if (e.key === 'Escape') {
                        closeModal();
                    }
                }
            });

            // Close modal function
            function closeModal() {
                magazineModal.style.display = 'none';
                document.body.classList.remove('hide-overflow');
            }

            // Close button
            if (magazineClose) {
                magazineClose.addEventListener('click', closeModal);
            }

            // Close on overlay click
            const overlay = document.querySelector('.magazine-modal-overlay');
            if (overlay) {
                overlay.addEventListener('click', closeModal);
            }
        });
    </script>
</body>
</html>
